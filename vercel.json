{
  "version": 2,
  "cleanUrls": true,
  "rewrites": [
    { "source": "/",        "destination": "/public/index.html" },
    { "source": "/admin",   "destination": "/public/admin.html" },
    { "source": "/login",   "destination": "/public/login.html" },
    { "source": "/register","destination": "/public/register-admin.html" },
    { "source": "/success", "destination": "/public/success.html" },
    { "source": "/assets/(.*)", "destination": "/public/assets/$1" },
    { "source": "/js/(.*)",     "destination": "/public/js/$1" },
    { "source": "/(.*)",        "destination": "/public/$1" }
  ]
}
